import random
lista_pytan = [
["Jakiego koloru były smerfy?","A. niebieskiego", "B. różowego", "C. czerwony", "D. zielonego","A. niebieskiego","A. niebieskiego", "A", "a"],
["Która z planet ma pierścienie?", "A. Pluton", "B. Saturn", "C. Neptun","D. Merkury","B. Saturn","B. Saturn", "B", "b"]
]
lista_progow=[0,500,1000,2000,5000,10000,20000,40000,75000,125000,250000,500000,1000000]
wskaznik_progu = 0
przegrana=0
##          ##          ##          ##          ##          ##          ##          ##          ##          ##          ##
def powitanie(wskaznik_progu):
    print("Witaj! Mam na imie Hubert Urbański i dziś zagrasz o milion złotych.")
    wyswietl_prog(wskaznik_progu)

##          ##          ##          ##          ##          ##          ##          ##          ##          ##          ##

def losowanie_pytania():
        return random.randint(0,len(lista_pytan)-1)


def wyswietlanie_pytania(lista_pytan,numer_pytania):
    print(lista_pytan[numer_pytania][0])  #printowanie pytania - z listy (używając wylocowany numer porządkowy)
    for i in range(1, 5):     #printowanie 4!!! odpowiedzi do wyboru - z listy (używając wylocowany numer porządkowy)
        print(lista_pytan[numer_pytania][i], end = "   ")



def przyjmowanie_odp(lista_pytan,wskaznik_progu,numer_pytania):
    wybor_uzytkownika = input("\nCo wybierasz? (wpisz ????) ")  #wpisywanie odpowiedzi #jak poprosic o wpisanie "A" czy "a"?
    if wybor_uzytkownika == lista_pytan[numer_pytania][7] or wybor_uzytkownika == lista_pytan[numer_pytania][8]:   #sprawdzanie czy wpisana odpowiedz prawdziwa; MA BYĆ NA 6 i 7 MIEJSCU PORZĄDKOWYM(DLA KOMPUTERA NA 5 i 6) W LIŚCIE!! #są dwa możliwe warianty wpisania "A" czy "a" - dlatego robimy (żeby nie przekształcać potem input) odrazu możliwość "A" czy "a".
        print("Super, to prawda!")
        wskaznik_progu += 1
        wyswietl_prog(wskaznik_progu)
    else:
        wskaznik_progu = 0
        print("Koniec gry.")
        przegrana=1
def wyswietl_prog(wskaznik_progu):
        print("Teraz jestes na progu:", lista_progow[wskaznik_progu],"zl\n\n")
        print(wskaznik_progu)


def gra():
    if przegrana==0:
        aktualne_pytanie=losowanie_pytania()
        wyswietlanie_pytania(lista_pytan,aktualne_pytanie)
        przyjmowanie_odp(lista_pytan,wskaznik_progu,aktualne_pytanie)


#powitanie(lista_progow,wskaznik_progu)

powitanie(wskaznik_progu)
while True:
    gra()
