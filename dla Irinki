######################## z głównego kodu  #########################################################

okno_gry = Tk()

wartosc = IntVar()
def przyciski_telefon_do_przyjaciela(): ###ZeRA ZAMIENIĆ NA "RN_LOS"
    if wartosc.get() == 1 and lista_pytan[0][1] == lista_pytan[0][5]:   #jeśli wcisnąłeś "A" ##(po and) jeśli odpowiedź o danej wartości jest prawdziwą odpowiedzią (na 5 miejscu w liście)
        przegrana = 0
        #po tym wywoływa się funkcję z następnym pytaniem i to się toczy
    elif wartosc.get() == 2 and lista_pytan[0][2] == lista_pytan[0][5]:  #jeśli wcisnąłeś "B"
        przegrana = 0
        
    elif wartosc.get() == 3 and lista_pytan[0][3] == lista_pytan[0][5]:  #jeśli wcisnąłeś "C"
        przegrana = 0
        
    elif wartosc.get() == 4 and lista_pytan[0][4] == lista_pytan[0][5]:  #jeśli wcisnąłeś "B"
        przegrana = 0
        
    else: #czyli jeśli wybierasz zlą odp -- przedrane
        przegrana = 1
       #po tym wywoływa się funkcje która poinformuje o przegnaniu i zakońzy gre
    
    return przegrana 

###############################################################################################
przyciskA = Radiobutton(okno_gry, text = lista_pytan[0][1], variable = wartosc, value = 1, command = przyciski_telefon_do_przyjaciela)#naszeOkno\\pozycji w liście dla A\\wartość\\znaczenie\\funkcja
przyciskA.grid(row = 1, column = 1)

przyciskB = Radiobutton(okno_gry, text = lista_pytan[0][2], variable = wartosc, value = 2, command = przyciski_telefon_do_przyjaciela)
przyciskB.grid(row = 1, column = 2)

przyciskC = Radiobutton(okno_gry, text = lista_pytan[0][3], variable = wartosc, value = 3, command = przyciski_telefon_do_przyjaciela)
przyciskC.grid(row = 1, column = 3)

przyciskD = Radiobutton(okno_gry, text = lista_pytan[0][4], variable = wartosc, value = 4, command = przyciski_telefon_do_przyjaciela)
przyciskD.grid(row = 1, column = 4)

okno_gry.mainloop
