import random
lista_pytan = [["Jakiego koloru były smerfy?","A. niebieskiego", "B. różowego", "C. czerwony", "D. zielonego","A. niebieskiego","A. niebieskiego", "A", "a"], ["Która z planet ma pierścienie?", "A. Pluton", "B. Saturn", "C. Neptun","D. Merkury","B. Saturn","B. Saturn", "B", "b"]]licznik_pieniedzy = 20

##          ##          ##          ##          ##          ##          ##          ##          ##          ##          ##
def powitanie(licznik_pieniedzy):    #jakiś początek i powitanie:
    print("Twój aktualny stan konta:", licznik_pieniedzy, "złoty")

##          ##          ##          ##          ##          ##          ##          ##          ##          ##          ##    
def los_pytan_i_pryjmow_odp(lista_pytan):
    while licznik_pieniedzy > 0:     #gramy póki mamy coś na koncie
        los_numer_listy = random.randint(0,1)   #losowanie numeru porządkowego dla zadania pytania #ZMIENIĆ ilość kiedy w liście będzie więcej elementów
        print(lista_pytan[los_numer_listy][0])  #printowanie pytania - z listy (używając wylocowany numer porządkowy)
        for i in range(1, 5):     #printowanie 4!!! odpowiedzi do wyboru - z listy (używając wylocowany numer porządkowy)
            print(lista_pytan[los_numer_listy][i], end = "   ")
        print()
        wybor_uzytkownika = input("Co wybierasz? (wpisz ????) ")  #wpisywanie odpowiedzi #jak poprosic o wpisanie "A" czy "a"?

        if wybor_uzytkownika == lista_pytan[los_numer_listy][7] or wybor_uzytkownika == lista_pytan[los_numer_listy][8]:   #sprawdzanie czy wpisana odpowiedz prawdziwa; MA BYĆ NA 8 i 9 MIEJSCU PORZĄDKOWYM(DLA KOMPUTERA NA 7 i 8) W LIŚCIE!! #są dwa możliwe warianty wpisania "A" czy "a" - dlatego robimy (żeby nie przekształcać potem input) odrazu możliwość "A" czy "a".
            print("Super, to prawda!")
            licznik_pieniedzy += 40
            print("Teraz masz na koncie:", licznik_pieniedzy, "złoty")
        else:
            print("Falszywa odp")
            licznik_pieniedzy -= 20
            print("Teraz masz na koncie:", licznik_pieniedzy, "złoty")
    else:          #jeżeli na koncie jest 0, to koniec gry
        print("Koniec gry.")
