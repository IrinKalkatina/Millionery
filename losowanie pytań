import random
lista_pytan = [["Jakiego koloru były smerfy?","A. niebieskiego", "B. różowego", "C. czerwony", "D. zielonego", "A", "a"], ["Która z planet ma pierścienie?", "A. Pluton", "B. Saturn", "C. Neptun","D. Merkury", "B", "b"]]     #ktoś musi dopisać pytania do listy!
licznik_pieniedzy = 20 # dodaje licznik, jeśli chcecie to można zmienić na dowolną liczbę.
##          ##          ##          ##          ##          ##          ##          ##          ##          ##          ##
#jakiś początek i powitanie:
print("Hej, chcesz zagrać w Milljonerów?")
imie = input("Podaj imię")
print("Cześć", imie)
print("Twój aktualny stan konta:", licznik_pieniedzy, "złoty")

##          ##          ##          ##          ##          ##          ##          ##          ##          ##          ##    
while licznik_pieniedzy > 0:     #gramy póki mamy coś na koncie
    los_numer_listy = random.randint(0,1)   #losowanie numeru porządkowego dla zadania pytania
    print(lista_pytan[los_numer_listy][0])  #printowanie pytania - z listy (używając wylocowany numer porządkowy)
    for i in range(1, 5):     #printowanie 4!!! odpowiedzi do wyboru - z listy (używając wylocowany numer porządkowy)
        print(lista_pytan[los_numer_listy][i], end = "   ")
    print()
##          ##          ##          ##          ##          ##          ##          ##          ##          ##          ##    
    wybor_uzytkownika = input("Co wybierasz? (wpisz ????) ")  #wpisywanie odpowiedzi #jak poprosic o wpisanie "A" czy "a"?

    if wybor_uzytkownika == lista_pytan[los_numer_listy][5] or wybor_uzytkownika == lista_pytan[los_numer_listy][6]:   #sprawdzanie czy wpisana odpowiedz prawdziwa; MA BYĆ NA 6 i 7 MIEJSCU PORZĄDKOWYM(DLA KOMPUTERA NA 5 i 6) W LIŚCIE!! #są dwa możliwe warianty wpisania "A" czy "a" - dlatego robimy (żeby nie przekształcać potem input) odrazu możliwość "A" czy "a".
        print("Super, to prawda!")
        licznik_pieniedzy += 40
        print("Teraz masz na koncie:", licznik_pieniedzy, "złoty")
    else:
        print("Falszywa odp")
        licznik_pieniedzy -= 20
        print("Teraz masz na koncie:", licznik_pieniedzy, "złoty")

##          ##          ##          ##          ##          ##          ##          ##          ##          ##          ##    
else:          #jeżeli na koncie jest 0, to koniec gry
    print("Koniec gry.")
